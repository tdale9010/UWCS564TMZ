@model MyFlix.Models.MovieDetailsModel
@{
    ViewBag.Title = "MovieDetailsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/MovieDetails.js"></script>

<h2>@Model.Title - @Model.Rating%</h2>
<button id="addFavorites" data-id="@Model.ID">Add To Favorite Movies</button>
<img src="@Model.ImageURL"/>

<h3>Country of Origin: @Model.Country</h3>

<h3>Directed By @Model.Director</h3>

<h3>Starring</h3>
<ul>
	@foreach(var actor in @Model.Actors)
	{
		<li>
			@actor
		</li>
	}
</ul>

<h3>Tags</h3>
<ul>
	@foreach(var tag in Model.Tags)
	{
		<li>
			@tag
			<button class="favoriteTags" value="@tag.Trim()">Add to favorite tags</button>
		</li>
		
	}
</ul>
<h3>Genres</h3>
<ul>
	@foreach(var genre in Model.Genres)
	{
		<li>
			@genre
			<button class="favoriteGenres" value="@genre.Trim()">Add to favorite genres</button>
		</li>
		
	}
</ul>
<h3>Locations</h3>
<ul>
	@foreach(var location in Model.Locations)
	{
		<li>
			@location
		</li>
	}
</ul>

